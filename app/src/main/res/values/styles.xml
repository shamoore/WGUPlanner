<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuoteText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/colorWindowBackground</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textSize">18dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FieldNameText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="button_date">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">@color/colorWindowBackground</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:hint">"mm/dd/yy"</item>
    </style>

    <style name="button_mentor">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">@color/colorWindowBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>


</resources>
