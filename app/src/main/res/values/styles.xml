<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="primary_button">
    <item name="android:padding">6dp</item>
    <item name="android:background">@color/colorPrimaryDark</item>
    <item name="android:textColor">@color/colorWindowBackground</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:textSize">12sp</item>
</style>

    <style name="warn_button">
        <item name="android:padding">6dp</item>
        <item name="android:background">@color/colorWarn</item>
        <item name="android:textColor">@color/colorWindowBackground</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="QuoteText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/colorWindowBackground</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textSize">18dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FieldNameText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>


</resources>
